{
    "name": "base_server",
    "version": "1.0.0",
    "main": "index.js",
    "bin": {
        "setup": "./cli/setup.js"
    },
    "scripts": {
        "build": "npx tsc",
        "start:dev": "cross-env NODE_ENV=development nodemon --legacy-watch src/bin/server.ts",
        "serve": "cross-env NODE_ENV=production node dist/bin/server.js",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --fix",
        "test": "jest --detectOpenHandles",
        "watch": "npx jest --watch",
        "prepare": "husky",
        "migrate:dev": "cross-env MIGRATE_MODE=development node scripts/migration.js",
        "migrate:prod": "cross-env MIGRATE_MODE=production node scripts/migration.js",
        "dockerize:dev": "docker build -t base-server:dev -f docker/development/Dockerfile .",
        "updates:check": "ncu"
    },
    "author": "",
    "license": "ISC",
    "description": "",
    "lint-staged": {
        "*.ts": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^19.5.0",
        "@commitlint/config-conventional": "^19.5.0",
        "@eslint/js": "^9.11.1",
        "@types/bcrypt": "^5.0.2",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.13",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/node": "^22.6.1",
        "@types/source-map-support": "^0.5.10",
        "@types/supertest": "^6.0.2",
        "@types/uuid": "^10.0.0",
        "commitlint-config-gitmoji": "^2.3.1",
        "devmoji": "^2.3.0",
        "eslint": "^9.11.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.36.1",
        "globals": "^15.9.0",
        "husky": "^9.1.6",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.10",
        "nodemon": "^3.1.7",
        "prettier": "3.3.3",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.7.0"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "chalk": "^5.3.0",
        "colorette": "^2.0.20",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "countries-and-timezones": "^3.6.0",
        "cross-env": "^7.0.3",
        "dayjs": "^1.11.13",
        "dotenv-flow": "^4.1.0",
        "execa": "^9.4.0",
        "express": "^4.21.0",
        "helmet": "^7.1.0",
        "inquirer": "^11.1.0",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "libphonenumber-js": "^1.11.9",
        "mongoose": "^8.6.3",
        "ora": "^8.1.0",
        "progress": "^2.0.3",
        "rate-limiter-flexible": "^5.0.3",
        "resend": "^4.0.0",
        "semver": "^7.6.3",
        "source-map-support": "^0.5.21",
        "ts-migrate-mongoose": "^3.8.4",
        "uuid": "^10.0.0",
        "winston": "^3.14.2",
        "winston-mongodb": "^6.0.0"
    }
}
